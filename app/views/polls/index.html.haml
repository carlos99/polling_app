

%div.container
  %h1 Listing polls
  %div.row
    %tr
      %div Title
      %div
      %div
      %div
  
    - @polls.each do |poll|
      %div.row
        %div.col-md-2= poll.title
        %div.col-md-2= link_to 'Show', poll
        %div.col-md-2= link_to 'Edit', edit_poll_path(poll)
        %div.col-md-2= link_to 'Destroy', poll, :method => :delete, :data => { :confirm => 'Are you sure?' }
        %div.col-md-2= link_to 'Add Question', new_poll_question_path(poll), class: "btn btn-default"
        %div.col-md-2= link_to 'Answer', new_poll_reply_path(poll), class: "btn btn-default"

%br

= link_to 'New Poll', new_poll_path
